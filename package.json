{
	"name": "vs-code-simple-http-server",
	"displayName": "Simple HTTP Server",
	"description": "A Simple HTTP Server for Visual Studio Code.",
	"repository": {
		"type": "git",
		"url": "https://github.com/7Flixs/vs_code_simple_http_server.git"
	},
	"version": "0.0.1",
	"publisher": "Shawn Funke",
	"keywords": [
		"http",
		"http viewer",
		"http preview",
		"http server",
		"simple http",
		"simple http server"
	],
	"engines": {
		"vscode": "^1.24.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:shs.createServer"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "shs.createServer",
				"title": "Simple HTTP Server: Create Simple HTTP Server"
			}
		],
		"configuration": {
			"title": "Simple HTTP Server configuration",
			"properties": {
				"shs.serverPort": {
					"type": "number",
					"default": 8080,
					"description": "This is the port that Simple HTTP Server will be running on."
				},
				"shs.serverHost": {
					"type": "string",
					"default": "127.0.0.1",
					"description": "This is the host that Simple HTTP Server will be running on."
				},
				"shs.mainFile": {
					"type": "string",
					"default": "index.html",
					"description": "This is the main file that Simple HTTP Server will be using."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.6.1",
		"vscode": "^1.1.6",
		"tslint": "^5.8.0",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"@types/express": "^4.16.0",
		"express": "^4.16.3",
		"opn": "^5.3.0"
	}
}
